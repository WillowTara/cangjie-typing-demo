{
  "name": "newproject",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc -b",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "test": "vitest",
    "test:node": "vitest run --config vitest.config.node.ts",
    "test:dom": "vitest run --config vitest.config.dom.ts",
    "test:coverage": "npm run test:node -- --coverage && npm run test:dom -- --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install chromium",
    "test:binary-smoke": "vitest run --config vitest.config.node.ts src/lib/dictionaryBinary.test.ts",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --config vitest.config.node.ts",
    "test:all": "npm run test:node && npm run test:dom",
    "check": "npm run typecheck && npm run lint && npm run test:all && npm run test:coverage",
    "dict:build:v2": "node scripts/dict/build-v2.mts",
    "dict:verify:core": "node scripts/dict/verify-core-artifacts.mts",
    "dict:export:sqlite": "node scripts/dict/export-sqlite.mts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ]
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
